<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SHADOW LAYER -->
    <item android:left="@dimen/rounded_button_shadow_size"
          android:top="@dimen/rounded_button_shadow_size">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/rounded_border_radius"/>
        </shape>
    </item>
    <!-- CONTENT LAYER -->
    <item android:left="@dimen/rounded_button_shadow_size"
          android:top="@dimen/rounded_button_shadow_size">
        <shape>
            <solid android:color="@color/button_background_color" />
            <corners android:radius="@dimen/rounded_border_radius"/>
        </shape>
    </item>
</layer-list>